<div class="jumbotron jumbotron-fluid first-banner">
  <div class="container">
    <h1 class="main-title">Mustache's Cocktail</h1>
    <p class="lead">Find the right liquid to wet your mustache with</p>
  </div>
</div>

<div class="add-button">
  <%= link_to 'Add', new_cocktail_path, class: "" %>
</div>



<div class="cocktail-title">
  <h1>Cocktails</h1>
</div>

<div class="d-flex justify-content-between cocktail-card-container">

  <% @cocktails.each do |cocktail| %>

  <%= link_to cocktail_path(cocktail) do %> <!-- qui costruisco dicendo che ogni cocktail avrà la sua pagina con il suo id -->
    <div class="cocktail-card">
      <div class="name-button">
        <h2><%= cocktail.name %></h2>
      </div>


    <% end %>
        <%= link_to '', cocktail_path(cocktail), class: "fas fa-trash", method: :delete %>

    </div>
    <% end %>
</div>

