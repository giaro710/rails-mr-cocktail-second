<div class="jumbotron jumbotron-fluid first-banner">
  <div class="container">
    <h1 class="display-4">Mustache's Cocktail</h1>
    <p class="lead">Find the right liquid to wet your mustache with</p>
  </div>
</div>

<div class="add-button">
  <%= link_to '', new_path, class: "" %>
</div>



<div class="cocktail-title">
  <h1>Cocktails</h1>
</div>

<div class="d-flex justify-content-between cocktail-card-container">

  <% @cocktails.each do |cocktail| %>
  <div class="cocktail-card">
    <div class="name-button">
      <h2><%= link_to cocktail.name, "/#{cocktail.id}" %></h2> <!-- qui costruisco dicendo che ogni cocktail avrà la sua pagina con il suo id -->
    </div>
    <div class="trash-button">
      <%= link_to '', "/#{cocktail.id}", class: "fas fa-trash", method: :delete %>
    </div>

   <!--  <div class="ingredients">

      <% cocktail.ingredients.each do |ingredient| %>
      <p><%= ingredient.name %></p>
      <% end %>
    </div> -->
  </div>

  <% end %>
</div>

