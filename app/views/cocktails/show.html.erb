<nav class="navbar navbar-light bg-light show-nav">
  <%= link_to 'Mr Cocktail', root_path, class: "navbar-brand" %>
</nav>

<h1><%= @cocktail.name %></h1>

<h2>Ingredients</h2>

<% @cocktail.doses.each do |dose| %>
  <h3><%= dose.ingredient.name %><span> - <%= dose.description %></span></h3>

  <%= link_to '', "/#{dose.cocktail.id}/#{dose.id}", class: "fas fa-trash", method: :delete %>
  <%= link_to '', "/#{dose.cocktail.id}/#{dose.id}", class: "far fa-edit" %>
<% end %>

<form method="post" action=<% "/#{@cocktail.id}" %> >  <!-- action Ã¨ il path -->
  <div class="form-group">
    <label for="exampleFormControlSelect1">Ingredients</label>
    <select class="form-control" id="exampleFormControlSelect1" name="ingredient">
      <% Ingredient.all.each do |ingredient| %>
      <option><%= ingredient.name %></option>
      <% end %>
    </select>
  </div>
  <div class="form-group">
    <label for="exampleFormControlTextarea1">Dose:</label>
    <textarea class="form-control" id="exampleFormControlTextarea1" rows="1" name="dose"></textarea>
  </div>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <button type="submit" class="btn btn-primary">Add ingredient</button>
</form>

